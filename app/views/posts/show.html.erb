<h2 align="center">Title: <%= @post.title %></h2>
<div class="well col-xs-8 col-xs-offset-2">
	<% if @post.user %>
		<ul class="listing">
		<div class="row center">
			<div class="col-md-4 col-md-offset-4">
				<li>Created by:</li>
				<li class="post-title">
					<%= link_to @post.user.email, user_path(@post.user) %>
				</li>
				<li><small>
					<%= pluralize(@post.user.post.count, "post") if @post.user.post %>
				</small></li>
			</div>
		</div>
		</ul>
<% end %>

<h4 class="center description"><strong>Description:</strong></h4>
	<hr>
		<%= simple_format(@post.description) %>
			<div class="post-actions">
			   <%# if logged_in? && current_user == @post.user %>
				<%= link_to "Edit this post", edit_post_path(@post), class: "btn btn-xs btn-primary" %>
				<%= link_to "Delete this post", post_path(@post), method: :delete,
						data: { confirm: "Are you sure you want to delete the post?"},
						class: "btn btn-xs btn-danger" %>
			    <%#end%>
		
					<%= link_to "View all posts", post_path, class: "btn btn-xs btn-success" %>
			</div>
</div>
